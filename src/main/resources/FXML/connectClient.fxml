<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" styleClass="border-pane" fx:controller = "MyController"
            fx:id="borderPane">
    <top>
        <VBox fx:id="PIP" alignment="TOP_LEFT" spacing="5">
            <TextField fx:id="textF1" promptText="Ip address" maxWidth="200"/>
            <TextField fx:id="textF2" promptText="Port Num(5555)" maxWidth="200"/>
            <VBox alignment="CENTER" maxWidth="200">
                <Button fx:id="connectToServer" text="Connect to Server" onAction="#connectToServerMethod"/>
            </VBox>
        </VBox>
    </top>
    <center>
        <VBox fx:id="Design" alignment="CENTER">
            <ImageView fx:id="logo" fitWidth="150" preserveRatio="true">
                <image>
                    <Image url="/AddOn/logo.png"/>
                </image>
            </ImageView>
            <TextField text = "Welcome to 3 card Poker" editable="false" styleClass="title" maxWidth="600" />
        </VBox>
    </center>
    <bottom>
        <Button text="Start Game"/> <!-- onAction="#switchToGame" -->
    </bottom>
</BorderPane>